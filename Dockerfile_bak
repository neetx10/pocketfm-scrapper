FROM alpine:latest AS GRADLE_BUILD

RUN apk add --no-cache openjdk17

RUN curl -sSL https://downloads.gradle.org/distributions/gradle-8.4-bin.zip | tar -xzf - -C /opt

ENV GRADLE_HOME /opt/gradle-8.4

ENV PATH "$PATH:/opt/gradle-8.4/bin"

ENV APP_HOME=/usr/app/
WORKDIR $APP_HOME
COPY build.gradle settings.gradle $APP_HOME

COPY gradle $APP_HOME/gradle
COPY --chown=gradle:gradle . /home/gradle/src
USER root
RUN chown -R gradle /home/gradle/src
COPY . .
RUN gradle build -x test

FROM alpine:latest

RUN apk add --no-cache openjdk17

ENV APP_HOME=/usr/app/

COPY --from=GRADLE_BUILD $APP_HOME/build/libs/PocketFMScrapping-0.0.1-SNAPSHOT.jar /app/

EXPOSE 8080
ENTRYPOINT ["java", "-jar", "/app/PocketFMScrapping-0.0.1-SNAPSHOT.jar"]
